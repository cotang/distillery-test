mixin footer()

  // Footer
  +b.FOOTER.footer
    +e.hashtag
      a(href="#", title="Разработчик") #visitsedona
    +e.social
      +b.social
        +e.A.link--tw(href="#", title="twitter link")
          svg(width='18', height='14')
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#icon-twitter')
        +e.A.link--fb(href="#", title="facebook link")
          svg(width='9', height='18')
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#icon-facebook')
        +e.A.link--youtube(href="#", title="youtube link")
          svg(width='20', height='14')
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#icon-youtube')
    +e.copyright
      a(href="#", title="Разработчик") Разработано
        svg(width='27', height='34')
          use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#htmlacademy')

  // Overlay
  +b.overlay
    +e.bg
    // Popup success
    +b.SECTION.popup--success
      +e.H2.title Ваш отзыв отправлен!
      +e.text Спасибо за ваше участие, ваш отзыв уже поступил к нам. В ближайшее время мы опубликуем его на сайте.
      +e.btn
        +b.A.btn(href="#") Закрыть окно
    // Popup error
    +b.SECTION.popup--error
      +e.H2.title Что-то пошло не так!
      +e.text Проверьте поля, выделенные красным, скорее всего вы забыли их заполнить
      +e.btn
        +b.A.btn(href="#") Ок


